@model IEnumerable<notgitter.Models.Repo>

@{
    ViewBag.Title = "Index";
}

<h2>List @ViewBag.name 's Of Available Repos</h2>


<table class="table table-bordered table-striped">
    <tr>
        <th>
            created on
        </th>
        <th>
            @Html.DisplayNameFor(model => model.language)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.url)
        </th>
       
        <th>
            owner
        </th>
        <th></th>
    </tr>
  
@foreach (var item in Model)
{
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.dateCreated)
        </td>
 
        <td>

           <a href=@("https://github.com/topics" + "/" + item.language)> @Html.DisplayFor(modelItem => item.language)</a>
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.name)
        </td>
        <td>
            <a  href=@{@item.url}>@Html.DisplayFor(modelItem => item.url)</a>
        </td>

        <td>
            @Html.DisplayFor(modelItem => item.User.name)
        </td>
        <td>
            <a class="btn btn-primary" href=@Url.Action("Index", "ChatRoom", new { @repoName = item.name, @userid=ViewBag.id })>go to the chatroom</a>
          

        </td>
    </tr>
    }

</table>
